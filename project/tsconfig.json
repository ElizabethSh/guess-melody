{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-jsx",

    // Enhanced type checking (more practical settings)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    // Path mapping
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@mocks/*": ["mocks/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@test-utils/*": ["test-utils/*"],
      "@types/*": ["types/*"],
      "@hocs/*": ["hocs/*"],
      "@utils/*": ["utils/*"],
      "@icons": ["icons.tsx"],
      "@settings": ["settings.ts"],
      "@utils": ["utils.ts"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "eslint.config.js"
  ]
}
